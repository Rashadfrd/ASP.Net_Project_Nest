@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Category>

<div class="card mb-4">
@foreach (var item in Model)
{   
<article class="itemlist">
    <div class="row align-items-center">
        <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
            <a class="itemside" href="#">
                <div class="left">
                    <img src="~/assets/imgs/shop/@item.ImageUrl" class="img-sm img-thumbnail" alt="Item" />
                </div>
                <div class="info">
                    <h6 class="mb-0">@item.Name</h6>
                </div>
            </a>
        </div>
        <div class="col-lg-2 col-sm-2 col-4 col-price"><span>@item.Products.Count()</span></div>
        <div class="col-lg-2 col-sm-2 col-4 col-status">
            @if (item.IsDeleted == false)
                {
                    <span class="badge rounded-pill alert-success">Active</span>
                }
                else
                {
                    <span class="badge rounded-pill alert-danger">Deleted</span>
                }
        </div>
        <div class="col-lg-1 col-sm-2 col-4 col-date">
            <span>@item.ModifiedTime</span>
        </div>
        <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
            <a href="#" class="btn btn-sm font-sm rounded btn-brand"> <i class="material-icons md-edit"></i> Edit </a>
            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm font-sm btn-light rounded"> <i class="material-icons md-delete_forever"></i> Delete </a>
        </div>
    </div>
    <!-- row .// -->
</article>
<!-- itemlist  .// -->
}
</div>

